{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="app_register-container">
        <div class="card-form">
            <h1 class="heading-h1">Register</h1>

            {{ form_start(registrationForm, { attr : {class: 'app_register-form stackV'}}) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.levelName) }}
                {{ form_row(registrationForm.age) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                <div>
                {{ form_row(registrationForm.agreeTerms) }}
                </div>
                <div style="gap: var(--size-3); flex-direction: row; align-items: center;">
                    <button type="submit" class="btn-gradient">Register</button>
                    <a href="/login">Log In</a>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
